<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <div class='container'>
            <div class="row container_dados">
                <div class="col-md-4">
                    <img class="tagmarLogo" src="systems/tagmar/templates/sheets/img/logo.png"/> 
                </div>
                <div class="col-md-8">
                    <h1 class="fairyDust" style="text-align: center; padding-top:20px;">{{item.type}}</h1>
                </div>
            </div>
            <div class="row container_dados">
                <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
                <h1 class="fairyDust"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            </div>
            <div class="container container_dados">
                <div class="row dados">
                    <div class="col-md-3">
                        <label><h4 class="mediaeval">Defesa Base:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <select class="mediaeval" name="data.defesa_base.tipo" type="text" value="{{data.defesa_base.tipo}}" data-dtype="String" height="30" style="font-size: 110%;">
                            {{#select data.defesa_base.tipo}}
                            <option value=""></option>
                            <option value="L">L</option>
                            <option value="M">M</option>
                            <option value="P">P</option>
                            {{/select}}
                        </select>    
                    </div>
                    <div class="col-md-2">
                        <input name="data.defesa_base.valor" type="number" value="{{data.defesa_base.valor}}" height="30"/>
                    </div>
                    <div class="col-md-3">
                        <label><h4 class="mediaeval">Físico Mín:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input name="data.fis_min" type="number" value="{{data.fis_min}}" height="30"/>
                    </div>
                    
                </div>

                <div class="row dados">
                    <div class="col-md-3"></div>
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Absorção:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input name="data.absorcao" type="number" value="{{data.absorcao}}" height="30"/>
                    </div>
                    <div class="col-md-3">
                        <label><h4 class="mediaeval">Força Mín:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input name="data.for_min" type="number" value="{{data.for_min}}" height="30"/>
                    </div>
                </div>

                <!--div class="row dados">
                    <div class="col-md-3"></div>
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Preço:</h4></label>
                    </div>
                    <div class="col-md-3">
                        <input name="data.preco" type="text" value="{{data.preco}}" height="30"/>
                    </div>
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Peso(Kg):</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input name="data.peso" type="number" value="{{data.peso}}" height="30"/>
                    </div>
                </div-->

                <div class="row dados">
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Descrição:</h4></label>
                    </div>
                    <div class="col-md-10">
                        <textarea class="mediaeval" name="data.descricao" value="{{data.descricao}}" style="height: 100px;font-size: 100%;">{{data.descricao}}</textarea>
                    </div>
                </div>

            </div>
        </div>   
    </header>
</form>
