<form class="{{cssClass}}" autocomplete="off" id="form_persona">
    <header class="sheet-header">
        <div class='container'>
            <div class="row container_dados">
                <div class="col-md-4 col-4">
                    <a href="https://www.tagmar.com.br/wiki/search.aspx" title="Clique para acessar o site."><img class="tagmarLogo" src="systems/tagmar/templates/sheets/img/logo.png"/></a> 
                </div>
                <div class="col-md-8 col-8">
                    <h1 class="fairyDust" style="text-align: center; padding-top:20px;">{{actor.type}}</h1>
                </div>
            </div>
            <div class="row container_dados">
                <div class="col-md-2 col-4" style="padding-top: 3px;">
                    <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="64" width="64"/>
                </div>
                <div class="col-md-6 col-8">
                    <h1 class="fairyDust"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
                </div>
                <div class="col-md-2 col-4" style="text-align: center;">
                    <label><h1 class="fairyDust" style="padding-top: 15px;">Estágio:</h1></label>
                </div>
                <div class="col-md-2 col-8">
                    <h1 class="fairyDust"><input class="ipEstagio" name="data.estagio" type="number" value="{{data.estagio}}" style="text-align: center";/></h1>
                </div>  
            </div>
        </div>
    </header>
    <section class="sheet-primary">
        <div class="container container_dados">
            <div class="row dados">
                <div class="col-md-12">
                    <nav class="prim-tabs tabs" data-group="primary">       <!--Tabs-->
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="basico" title="Basico">Básico</a></label>
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="habilidades" title="Habilidades">Habilidades</a></label>
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="combate" title="Combate">Combate</a></label>
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="magia" title="Magia">Magia</a></label>
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="pertences" title="Pertences">Pertences</a></label>
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="efeitos" title="Efeitos">Efeitos</a></label>
                    </nav>
                </div>
            </div>
            <div class="tab basico container" data-group="primary" data-tab="basico"> <!--Tab Básico-->
                <div class="row dados">         <!--Primeira Linha-->
                    <div class="col-md-1 col-4">
                        {{#ifeq actor.raca ""}}
                        <label><h4 class="mediaeval">Raça:</h4></label>
                        {{/ifeq}}
                        {{#ifdf actor.raca ""}}
                        <a class="displayRaca"><h4 class="mediaeval">Raça:</h4></a>
                        {{/ifdf}}
                    </div>
                    <div class="col-md-3 col-8">
                        <input name="data.raca" type="text" list="racas" value="{{data.raca}}" height="30" title="Escolha uma raça ou crie a sua." readonly/>
                    </div>
                    <div class="col-md-2 col-4">
                        {{#ifeq actor.profissao ""}}
                        <label><h4 class="mediaeval">Profissão:</h4></label>
                        {{/ifeq}}
                        {{#ifdf actor.profissao ""}}
                        <a class="displayProf"><h4 class="mediaeval">Profissão:</h4></a>
                        {{/ifdf}}
                    </div>
                    <div class="col-md-3 col-8">
                        <input class="profissao" name="data.profissao" type="text" value="{{data.profissao}}" height="30" title="Uma profissão diz muito sobre o herói." readonly/>
                    </div>
                    <div class="col-md-1 col-4">
                        <label><h4 class="mediaeval">Deus:</h4></label>
                    </div>
                    <div class="col-md-2 col-8">
                        <input name="data.deus" type="text" list="deuses" value="{{data.deus}}" height="30" title="Tem uns que acreditam, outros não."/>
                        <datalist id="deuses">
                            <option value="Blator"></option>
                            <option value="Cambu"></option>
                            <option value="Crezir"></option>
                            <option value="Crisagom"></option>
                            <option value="Cruine"></option>
                            <option value="Ganis"></option>
                            <option value="Lena"></option>
                            <option value="Liris"></option>
                            <option value="Maira"></option>
                            <option value="Palier"></option>
                            <option value="Parom"></option>
                            <option value="Plandis"></option>
                            <option value="Quiris"></option>
                            <option value="Selimon"></option>
                            <option value="Sevides"></option>
                        </datalist>
                    </div>
                </div>
                <div class="row dados">         <!--Segunda Linha-->
                    <div class="col-md-2 col-4">
                        <label><h4 class="mediaeval">Classe Social:</h4></label>
                    </div>
                    <div class="col-md-2 col-8">
                        <input name="data.classe_social" type="text" value="{{data.classe_social}}" height="30" title="Suas atitutes demonstram sua falta de classe."/>
                    </div>
                    <div class="col-md-2 col-4">
                        <label><h4 class="mediaeval">Especialização:</h4></label>
                    </div>
                    <div class="col-md-4 col-8">
                        <select name="data.especializacao" type="text" data-dtype="String" value="{{data.especializacao}}" height="30" title="Caia na real, você não tem nada de especial. Se você escolheu uma profissão, pode escolher algo aqui tambem."/>
                            {{#select data.especializacao}}
                                {{#each actor.especializacoes as |especializacao|}}
                                    <option value="{{especializacao}}">{{especializacao}}</option>
                                {{/each}}
                            {{/select}}
                        </select>
                    </div>
                    <div class="col-md-1 col-4">
                        <label><h4 class="mediaeval">Idade:</h4></label>
                    </div>
                    <div class="col-md-1 col-8">
                        <input name="data.idade" type="number" value="{{data.idade}}" height="30" title="Só isso? Parece bem mais velho."/>
                    </div>
                </div>
                <div class="row dados">         <!--Terceira Linha-->
                    <div class="col-md-2 col-4">
                        <label><h4 class="mediaeval">Altura(m):</h4></label>
                    </div>
                    <div class="col-md-2 col-8">
                        <input name="data.altura" type="text" value="{{data.altura}}" height="30" title="Altura do personagem, não a sua."/>
                    </div>
                    <div class="col-md-1 col-4">
                        <label><h4 class="mediaeval">Peso(Kg):</h4></label>
                    </div>
                    <div class="col-md-2 col-8">
                        <input name="data.peso" type="number" value="{{data.peso}}" height="30" title="Não adianta encolher a barriga."/>
                    </div>
                    <div class="col-md-2 col-4" style="text-align: right;">
                        <label><h4 class="mediaeval">Carga(Kg):</h4></label>
                    </div>
