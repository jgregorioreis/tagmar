                        <input title="Carga Máxima: 20Kg p/ ponto de FOR" name="data.carga.value" type="number" value="{{data.carga.value}}" height="30" readonly/>
                    </div>
                    <div class="col-md-1 col-2">
                        {{#if actor.data.carga.sobrecarga}}
                            <i class="fas fa-weight-hanging sobrepeso"><h4 class="mediaeval">+{{actor.data.carga.valor_s}}Kg</h4></i>
                        {{else}}
                            <i class="fas fa-weight-hanging sobrepeso hidden"></i>
                        {{/if}}
                    </div>
                </div>
