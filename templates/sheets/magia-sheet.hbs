<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <div class='container'>
            <div class="row container_dados">
                <div class="col-md-4">
                    <img class="tagmarLogo" src="systems/tagmar/templates/sheets/img/logo.png"/>  
                </div>
                <div class="col-md-8">
                    <h1 class="fairyDust" style="text-align: center; padding-top:20px;">{{item.type}}</h1>
                </div>
            </div>
            <div class="row container_dados">
                <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
                <h1 class="fairyDust"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            </div>
        </div>
    </header>
    <section class="sheet-primary" height="600">   
        <div class="container container_dados">
            <div class="row dados">
                <div class="col-md-12">
                    <nav class="prim-tabs tabs" data-group="primary">
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="descricao" title="Descricao">Descrição</a></label>
                        <label class="mediaeval" style="border:black double 1px; text-align: center;"><a class="item" data-tab="efeito" title="Efeito">Efeito</a></label>
                    </nav>
                </div>
            </div>
            <div class="tab descricao container" data-group="primary" data-tab="descricao">
                <div class="row dados">
                    <div class="col-md-2" style="text-align: left;">
                        <label><h4 class="mediaeval">Custo:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input name="data.custo" type="number" value="{{data.custo}}" height="30" style="margin-left: 1px;"/>
                    </div>
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Nível:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input name="data.nivel" type="number" value="{{data.nivel}}" height="30" style="margin-left: 1px;"/>
                    </div>
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Total:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input name="data.total.valor" type="number" value="{{data.total.valor}}" height="30"/>
                    </div>
                </div>
                <div class="row dados">
                    <div class="col-md-6"></div>
                    <div class="col-md-4">
                        <label><h4 class="mediaeval">Karma Adicional:</h4></label>
                    </div>
                    <div class="col-md-2">
                        <input name="data.total.valorKarma" type="number" value="{{data.total.valorKarma}}" height="30"/>
                    </div> 
                </div>
                <div class="row dados">
                    {{#ifdf data.duracao ""}}
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Descrição: <a class='ativaDesc' title='Desativar edição do texto.'><i class="fas fa-toggle-on"></i></a></h4></label>
                    </div>
                    <div class="col-md-10">
                        <textarea class="mediaeval" name="data.descricao" value="{{data.descricao}}" style="font-size: 100%; height: 100px;">{{data.descricao}}</textarea>
                    </div>
                    {{/ifdf}}
                    {{#ifeq data.duracao ""}}
                    <div class="col-md-2">
                        <label><h4 class="mediaeval">Descrição: <a class='ativaDesc' title='Ativar edição do texto.'><i class="fas fa-toggle-off"></i></a></h4></label>
                    </div>
                    <div class="col-md-10">
                        <textarea class="mediaeval" name="data.descricao" value="{{data.descricao}}" style="font-size: 100%; height: 100px;" disabled>{{data.descricao}}</textarea>
                    </div>
                    {{/ifeq}}
                </div>
            </div>
            <div class="tab efeito container" data-group="primary" data-tab="efeito">
                <div class="row dados">
                    <div class="col-md-12">
                        <textarea class="mediaeval" name="data.efeito" value="{{data.efeito}}" style="height: 150px; font-size: 110%;">{{data.efeito}}</textarea>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>