<form class="{{cssClass}} form_tagmar" autocomplete="off">
    <header class="sheet-header">
        <div class='container'>
            <div class="row container_dados">
                <div class="col-md-4">
                    <img class="tagmarLogo" src="systems/tagmar/templates/sheets/img/logo.png"/>  
                </div>
                <div class="col-md-8">
                    <h1 class="fairyDust" style="text-align: center; padding-top:20px;">{{item.type}}</h1>
                </div>
            </div>
            <div class="row container_dados">
                <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
                <h1 class="fairyDust"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            </div>
        </div>
    </header>
    <section class="sheet-primary" height="600">   
        <div class="container container_dados">
            <div class="row dados">
                <div class="col-md-2" style="text-align: left;">
                    <label><h4 class="mediaeval">Custo:</h4></label>
                </div>
                <div class="col-md-2">
                    <input name="data.custo" type="number" value="{{data.data.custo}}" height="30" style="margin-left: 1px;"/>
                </div>
                <div class="col-md-2">
                    <label><h4 class="mediaeval">NÃ­vel:</h4></label>
                </div>
                <div class="col-md-2">
                    <input name="data.nivel" type="number" value="{{data.data.nivel}}" height="30" style="margin-left: 1px;"/>
                </div>
                <div class="col-md-2">
                    <label><h4 class="mediaeval">Total:</h4></label>
                </div>
                <div class="col-md-2">
                    <input name="data.total.valor" type="number" value="{{data.data.total.valor}}" height="30" readonly/>
                </div>
            </div>
            <div class="row dados">
                <div class="col-md-6"></div>
                <div class="col-md-4">
                    <label><h4 class="mediaeval">Karma Adicional:</h4></label>
                </div>
                <div class="col-md-2">
                    <input name="data.total.valorKarma" type="number" value="{{data.data.total.valorKarma}}" height="30"/>
                </div> 
            </div>
            <div class="row dados">
                <div class="col-md-12" style="height: 320px;">
                    {{editor content=data.data.efeito target="data.efeito" button=true owner=options.owner editable=options.editable}}
                </div>
            </div>
        </div>
    </section>
</form>