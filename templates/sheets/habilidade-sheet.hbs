<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <div class='container'>
            <div class="row container_dados">
                <div class="col-md-4">
                    <img class="tagmarLogo" src="systems/tagmar/templates/sheets/img/logo.png"/> 
                </div>
                <div class="col-md-8">
                    <h1 class="fairyDust" style="text-align: center; padding-top:20px;">{{item.type}}</h1>
                </div>
            </div>
            <div class="row container_dados">
                <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
                <h1 class="fairyDust"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            </div>
            <div class="row container_dados">
                <div class="container">
                    <div class="row dados">
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Tipo:</h4></label>
                        </div>
                        <div class="col-md-4">
                            <select class="mediaeval" name="data.tipo" type="text" value="{{data.tipo}}" data-dtype="String" height="30">
                                {{#select data.tipo}}
                                <option value="profissional">Profissional</option>
                                <option value="manobra">Manobra</option>
                                <option value="conhecimento">Conhecimento</option>
                                <option value="subterfugio">Subterfúgio</option>
                                <option value="influencia">Influência</option>
                                <option value="geral">Geral</option>
                                {{/select}}
                            </select>      
                        </div>
                        <div class="col-md-2"></div>
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Custo:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input name="data.custo" type="number" value="{{data.custo}}" height="30"/>
                        </div>
                    </div>

                    <div class="row dados">
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Ajuste:</h4></label>
                        </div>
                        <div class="col-md-4">
                            <input name="data.ajuste.atributo" type="text" list="atributos" value="{{data.ajuste.atributo}}" height="30"/>
                            <datalist id="atributos">
                                <option value=""></option>
                                <option value="INT">INTELECTO</option>
                                <option value="AUR">AURA</option>
                                <option value="CAR">CARISMA</option>
                                <option value="FOR">FORÇA</option>
                                <option value="FIS">FÍSICO</option>
                                <option value="AGI">AGILIDADE</option>
                                <option value="PER">PERCEPÇÃO</option>
                            </datalist>
                        </div>
                        <div class="col-md-2">
                            <input class="ajuste hidden" name="data.ajuste.valor" type="number" value="{{data.ajuste.valor}}" height="30"/>
                        </div>
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Nível:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input class="nivel" name="data.nivel" type="number" value="{{data.nivel}}" height="30"/>
                        </div>
                    </div>

                    <div class="row dados">
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Penalidade:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input class="penal" name="data.penalidade" type="number" value="{{data.penalidade}}" height="30"/>
                        </div>
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Bônus:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input class="bonus" name="data.bonus" type="number" value="{{data.bonus}}" height="30"/>
                        </div>
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Total:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input class="totalInput2" name="data.total" type="number" value="{{data.total}}" height="30"/>
                        </div>
                    </div>

                    <div class="row dados">
                        <div class="col-md-3">
                            <label><h4 class="mediaeval">Tarefas aperfeiçoadas:</h4></label>  <!--Tarefa Aperfeiçoada-->
                        </div>
                        <div class="col-md-9">
                            <textarea class="mediaeval" name="data.tarefAperf" value="{{data.tarefAperf}}" style="height: 80px;font-size: 100%;">{{data.tarefAperf}}</textarea>
                        </div>
                    </div>

                    <div class="row dados">
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Descrição:</h4></label>  
                        </div>
                        <div class="col-md-10">
                            <textarea class="mediaeval" name="data.descricao" value="{{data.descricao}}" style="height: 100px;font-size: 100%;">{{data.descricao}}</textarea>
                        </div>
                    </div>

                </div>
            </div>
        </div>   
    </header>
</form>
