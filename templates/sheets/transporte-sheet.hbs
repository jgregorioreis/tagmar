<form class="{{cssClass}} form_tagmar" autocomplete="off">
    <header class="sheet-header">
        <div class='container'>
            <div class="row container_dados">
                <div class="col-md-4">
                    <img class="tagmarLogo" src="systems/tagmar/templates/sheets/img/logo.png"/>  
                </div>
                <div class="col-md-8">
                    <h1 class="fairyDust" style="text-align: center; padding-top:20px;">{{item.type}}</h1>
                </div>
            </div>
            <div class="row container_dados">
                <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
                <h1 class="fairyDust"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
            </div>
            <div class="row container_dados">
                <div class="container">
                    <div class="row dados">
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Carga(Kg):</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input name="data.capacidade.carga" type="number" value="{{data.data.capacidade.carga}}" height="30"/> 
                        </div>
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Pessoas:</h4></label>
                        </div>
                        <div class="col-md-2">
                            <input name="data.capacidade.pessoas" type="number" value="{{data.data.capacidade.pessoas}}" height="30"/>
                        </div>
                        <div class="col-md-4">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label><h4 class="mediaeval">Preço:</h4></label>
                                    </div>
                                    <div class="col-md-8">
                                        <input name="data.preco" type="text" value="{{data.data.preco}}" height="30"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row dados">
                        <div class="col-md-2">
                            <label><h4 class="mediaeval">Descrição:</h4></label>
                        </div>
                        <div class="col-md-10">
                            <textarea class="mediaeval" name="data.descricao" value="{{data.data.descricao}}" style="height: 100px;font-size: 100%;">{{data.data.descricao}}</textarea>
                        </div>
                    </div>

                </div>
            </div>
        </div>   
    </header>
</form>
